{
  "name": "aero-node",
  "version": "1.0.1",
  "license": "ISC",
  "description": "an aeroponics lab using nodejs and a raspberry pi",
  "main": "tsDist/src/server.js",
  "angular-cli": {},
  "scripts": {
    "build": "npm run sass-build && npm run build-static && npm run ts-build && npm run ts-lint",
    "build-static": "copyfiles src/**/*.html src/**/*.css src/**/*.json tsDist/",
    "sass-build": "node-sass src/public/css/main.scss dist/public/css/main.css",
    "sass-watch": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
    "start": "node tsDist/src/server.js",
    "test": "mocha -r ts-node/register tests/**/*Test.ts",
    "ts-build": "tsc",
    "ts-lint": "tslint -c tslint.json -p tsconfig.json",
    "ts-watch": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run sass-watch\" \"npm run ts-watch\" \"npm run start\"",
    "ng": "ng",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor"
  },
  "keywords": [
    "nodejs",
    "raspberrypi",
    "typescript",
    "gpio",
    "express",
    "angular2",
    "angular4"
  ],
  "author": "bendz",
  "repository": {
    "type": "git",
    "url": "git://github.com/wildpyro/aero_node.git"
  },
  "dependencies": {
    "async": "^2.4.1",
    "body-parser": "^1.17.2",
    "chalk": "^1.1.3",
    "continuation-local-storage": "^3.2.0",
    "express": "^4.15.3",
    "node-schedule": "^1.2.3",
    "onoff": "^1.1.3",
    "sequelize": "3.30.4",
    "sqlite3": "^3.1.8",
    "@angular/common": "^2.3.1",
    "@angular/compiler": "^2.3.1",
    "@angular/core": "^2.3.1",
    "@angular/forms": "^2.3.1",
    "@angular/http": "^2.3.1",
    "@angular/platform-browser": "^2.3.1",
    "@angular/platform-browser-dynamic": "^2.3.1",
    "@angular/router": "^3.3.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/cli": "^1.0.0",
    "@angular/compiler-cli": "^2.3.1",
    "@types/async": "^2.0.40",
    "@types/body-parser": "^1.16.3",
    "@types/chalk": "^0.4.31",
    "@types/continuation-local-storage": "^3.2.1",
    "@types/express": "^4.0.36",
    "@types/jasmine": "2.5.38",
    "@types/node-schedule": "^1.2.0",
    "@types/onoff": "0.0.27",
    "@types/sequelize": "^3.4.52",
    "@types/sqlite3": "^3.1.0",
    "codelyzer": "~2.0.0-beta.1",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "node-sass": "^4.5.3",
    "protractor": "~4.0.13",
    "ts-node": "^3.3.0"
  }
}
